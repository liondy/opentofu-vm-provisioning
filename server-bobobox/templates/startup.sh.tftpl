#!/bin/bash
set -euxo pipefail

export DEBIAN_FRONTEND=noninteractive

apt-get update -y
apt-get install -y ansible

mkdir -p /etc/ansible
cat <<'INVENTORY' >/etc/ansible/hosts
${ansible_inventory}
INVENTORY

cat <<'PLAYBOOK' >/tmp/site.yml
${ansible_playbook}
PLAYBOOK

ansible-playbook /tmp/site.yml
